{
  "manifest_version": 2,
  "version": "0.1",
  "name": "Real-time video translator",
  "description": "It is a translator that uses google to translate caption or any element on the page, and works perfectly with YOUTUBE, NRKTV and almost all websites. You can translate any element on the page by pressing the start button and clicking (Ctrl-key and left click).",
  "icons": {
      "16": "img/icon16.png",
      "32": "img/icon32.png",
      "48": "img/icon48.png",
      "128": "img/icon128.png"
    },
  
  "permissions": [
       "activeTab" , "tabs" , "declarativeContent" , "webNavigation" , "activeTab"

        ],
 
 
  "browser_action": {
    "default_icon": {                         // optional
            "16": "img/icon16.png",           // optional
            "24": "img/icon24.png",           // optional
            "32": "img/icon32.png"            // optional
          },
    "default_popup": "html/popup.html",
    "default_title":"Click to translate"
  },
    
  "background": {
    "scripts": [
      "js/background.js"
    ],
      "persistent": true
  },
    
 
  "web_accessible_resources": [
     "js/injection.js" 
 ]
}